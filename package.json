{
  "name": "the17thstudio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "type-check": "tsc --noEmit",
    "format:fix": "biome format --write .",
    "lint:fix": "biome lint .",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "pre-push": "yarn build"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn format"
    ]
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "husky": "^9.1.7",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
